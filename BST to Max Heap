class Solution{
  public:
  
  void inOrder(vector<int>&vec,Node* root)
  {
      if(root==NULL)
      {
          return;
      }
      inOrder(vec,root->left);
      vec.push_back(root->data);
      inOrder(vec,root->right);
  }
  
  void postOrder(vector<int>&vec,Node* root,int &idx)
  {
      if(root==NULL)
      {
          return;
      }
      postOrder(vec,root->left,idx);
      postOrder(vec,root->right,idx);
      root->data=vec[idx];
      idx++;
  }
    void convertToMaxHeapUtil(Node* root)
    {
        // Your code goes here
        vector<int>vec;
        inOrder(vec,root);
        int idx=0;
        postOrder(vec,root,idx);
    }    
};
